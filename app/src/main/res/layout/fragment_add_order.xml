<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".AddOrderFragment">


    <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="75dp"
            android:text="Your name"
            android:textColor="#A4C639"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="What did you order?"
            android:layout_marginTop="160dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#A4C639" />

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Where did you order from?"
            android:layout_marginTop="255dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#A4C639" />

    <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Tapingo Order ID"
            android:layout_marginTop="335dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#A4C639" />

    <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Location to drop off food"
            android:layout_marginTop="425dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#A4C639" />

    <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:layout_marginTop="115dp"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="textPersonName"/>
    <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:background="#CCCCCC"
            android:layout_marginTop="200dp"
            android:ems="10"
            android:inputType="textShortMessage"/>

    <Spinner
            android:id="@+id/place"
            android:layout_width="fill_parent"
            android:layout_marginTop="295dp"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:background="#CCCCCC"
            android:layout_marginTop="375dp"
            android:ems="10"
            android:inputType="number"/>

    <EditText
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:background="#CCCCCC"
            android:layout_marginTop="465dp"
            android:ems="10"
            android:inputType="textShortMessage"/>

    <TextView
            android:text="Order Details"
            android:layout_width="wrap_content"
            android:id="@+id/orderdetails"
            android:layout_gravity="top|center_horizontal"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:textSize="32dp"
            android:layout_marginTop="14dp"
            android:scaleType="fitCenter"/>

    <Button
            android:id="@+id/addToOrder"
            android:layout_width="173dp"
            android:text="Add to Order"
            android:scaleType="fitCenter"
            android:layout_marginTop="585dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_height="wrap_content"/>

</FrameLayout>